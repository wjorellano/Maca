string standalone.Fx_CloudLion_TestAdd_Variants_ShopyFy_ByDaniel()
{
    // ===== CONFIGURACIÓN =====
    shop_name = "test";
    shopify_token = "test";

    // Mutación con opciones personalizadas
    mutation_query = "mutation productVariantsBulkCreate($productId: ID!, $variants: [ProductVariantsBulkInput!]!) { productVariantsBulkCreate(productId: $productId, variants: $variants) { productVariants { id title price } userErrors { field message } } }";

    // Variante 1
    variant1 = Map();
    variant1.put("price","9.99");
    option1 = Map();
    option1.put("name","Variante 1");
    option1.put("optionName","Title");
    optionValues1 = List();
    optionValues1.add(option1);
    variant1.put("optionValues",optionValues1);

    // Variante 2
    variant2 = Map();
    variant2.put("price","14.50");
    option2 = Map();
    option2.put("name","Variante 2");
    option2.put("optionName","Title");
    optionValues2 = List();
    optionValues2.add(option2);
    variant2.put("optionValues",optionValues2);

    variants_list = List();
    variants_list.add(variant1);
    variants_list.add(variant2);

    // Variables de la mutación
    variables_map = Map();
    variables_map.put("productId","gid://shopify/Product/9954990326045"); // tu producto
    variables_map.put("variants",variants_list);

    payload = Map();
    payload.put("query",mutation_query);
    payload.put("variables",variables_map);

    headers = Map();
    headers.put("Content-Type","application/json");
    headers.put("X-Shopify-Access-Token",shopify_token);

    response = invokeurl
    [
        url :"https://" + shop_name + ".myshopify.com/admin/api/2025-07/graphql.json"
        type :POST
        parameters:payload.toString()
        headers:headers
        detailed:true
    ];

    info response;
    return "";
}
