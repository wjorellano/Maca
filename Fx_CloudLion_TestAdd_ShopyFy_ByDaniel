string standalone.Fx_CloudLion_TestAdd_ShopyFy_ByDaniel()
{
// ===== CONFIGURACIÓN =====
shop_name = "test";
// Ej: mitienda
shopify_token = "test";
// Mutación para crear producto
mutation_query = "mutation productCreate($input: ProductInput!) { productCreate(input: $input) { product { id title } userErrors { field message } } }";
// Variables para el producto
input_product = Map();
input_product.put("title","wjorellano Producto Test2");
input_product.put("descriptionHtml","Este es un producto Test, Creado desde CRM");
input_product.put("vendor","Boutique M");
input_product.put("productType","Ropa");
// Ejemplo
//
variables_map = Map();
variables_map.put("input",input_product);
//
payload = Map();
payload.put("query",mutation_query);
payload.put("variables",variables_map);
//
headers = Map();
headers.put("Content-Type","application/json");
headers.put("X-Shopify-Access-Token",shopify_token);
//
response = invokeurl
[
	url :"https://" + shop_name + ".myshopify.com/admin/api/2025-07/graphql.json"
	type :POST
	parameters:payload.toString()
	headers:headers
	detailed:true
];
//
info response;
return "";
}
